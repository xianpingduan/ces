<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="fragment_text">
        <item name="android:textColor">#ffacacac</item>
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="Ces.Widget" parent="AppTheme"/>

    <style name="NormalBlueButton" parent="Ces.Widget">
        <item name="android:background">@drawable/button_login_edit</item>
        <item name="android:textSize">@dimen/pl_micro_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="NormalSubmitButton" parent="Ces.Widget">
        <item name="android:background">@drawable/button_submit_edit</item>
        <item name="android:textSize">@dimen/pl_micro_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="NormalEditText" parent="Ces.Widget">
        <item name="android:textSize">@dimen/pl_small_text_size</item>
        <item name="android:textColor">@color/pl_main_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    
    <style name="ProgressSmall" parent="Ces.Widget">
        <item name="android:indeterminateDrawable">@drawable/progress_small_gray</item>
        <item name="android:minWidth">@dimen/pl_progress_small_height</item>
        <item name="android:maxWidth">@dimen/pl_progress_small_height</item>
        <item name="android:minHeight">@dimen/pl_progress_small_height</item>
        <item name="android:maxHeight">@dimen/pl_progress_small_height</item>
    </style>
    
    <style name="ListHeaderText" parent="Ces.Widget">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/pl_deputy_text_color</item>
    </style>
    
    <style name="NormalList" parent="Ces.Widget">
        <item name="android:divider">@null</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">500</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:scrollbarStyle">insideInset</item>
    </style>
    
    
    <style name="NoTitleBar" parent="Ces.Widget">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    
    <style name="MyDialog" >
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>