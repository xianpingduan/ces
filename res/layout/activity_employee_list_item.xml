<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:textColor="#727272"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textSize="@dimen/pl_small_text_size"
        android:text="A"
        android:paddingBottom="5dp"/>

    <RelativeLayout
        android:id="@+id/employee_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_item_bg_color" >

        <CheckBox
            android:id="@+id/employee_check_cb"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/common_margin_buttom"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_marginTop="@dimen/common_margin_top"
            android:background="@drawable/icon_employee_check_btn"
            android:button="@null" />

        <TextView
            android:id="@+id/employee_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_toRightOf="@id/employee_check_cb"
            android:textColor="#404040"
            android:textSize="@dimen/pl_small_text_size" />

        <TextView
            android:id="@+id/employee_depart_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_toRightOf="@id/employee_name_tv"
            android:textColor="#888888"
            android:textSize="@dimen/pl_small_text_size" />

        <TextView
            android:id="@+id/employee_job_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin_left"
            android:layout_toRightOf="@id/employee_depart_tv"
            android:textColor="#888888"
            android:textSize="@dimen/pl_small_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#cccccc" />
    </RelativeLayout>

</LinearLayout>