<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zt_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_bg_color" >

    <TextView
        android:id="@+id/zt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/zt_show_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="#888888"
        android:layout_marginBottom="@dimen/zhangtao_list_item_margin"
        android:layout_marginLeft="@dimen/zhangtao_list_item_margin"
        android:layout_marginTop="@dimen/zhangtao_list_item_margin"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/zt_check"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/zhangtao_list_item_margin"
        android:layout_marginRight="@dimen/zhangtao_list_item_margin"
        android:layout_marginTop="@dimen/zhangtao_list_item_margin"
        android:background="@drawable/normal_check_button"
        android:button="@null" />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>